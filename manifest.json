{
    "manifest_version": 2,
    "name": "Kur Kaç?",
    "description": "Döviz kurlarını görüntülemek için geliştirilmiş uzantı. / Extension developed for displaying exchange rates of Turkish Lira.",
    "version": "1.2.1",
    "icons": {
        "128": "icon_128.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
    "permissions": [
        "activeTab"
    ]
}